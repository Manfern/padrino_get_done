- error = @project.errors.include?(:account_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :account_id, :class => 'control-label'
  .controls
    =f.select(:account_id, :collection => @accounts, :fields => [:name, :id], :class => 'selectpicker input-xlarge input-with-feedback', :autofocus => true, :multiple => true, :data => {:live_search => "true"})
    %span.help-inline=error ? f.error_message_on(:category_id, :class => 'text-error') : ''

